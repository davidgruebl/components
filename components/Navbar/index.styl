@require 'nib'
@require 'jeet'

navColor = rgba(255, 255, 255, .5)
textColor = #171717
activeTextColor = #000
activeNavColor = rgba(250, 250, 250, 1)
navHeight = 75px

.navbar-component
  col(1/1)
  z-index: 2
  position: relative
  overflow: hidden
  height: navHeight
  background-color: navColor
  color: textColor
  text-align: center
  .title
    absolute: top 15px left 30px
    font-size: 40px

  .inner
    display: inline-block

    a
      transition: all .5s
      min-width: 150px
      height: navHeight
      line-height: navHeight
      display: inline-block
      font-size: 1.2em
      text-align: center
      outline: none
      color: inherit
      text-decoration: none
      border-bottom: 3px solid rgba(0, 0, 0, 0)
      &:hover
        border-bottom: 3px solid #555

      &.active
        color: activeTextColor
        background-color: activeNavColor
        border-bottom: 3px solid #262626
