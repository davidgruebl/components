@require 'nib'
@require 'jeet'

navColor = #27ae60
textColor = #ecf0f1
activeTextColor = #ecf0f1
activeNavColor = #2ecc71
navHeight = 55px

.navbar-component
  col(1/1)
  z-index: 2
  position: relative
  overflow: hidden
  height: navHeight
  background-color: navColor
  color: textColor

  .inner
    center(max-width: 700px)

    a
      span(1/5)
      transition: 300ms background-color
      height: navHeight
      line-height: navHeight
      display: block
      font-size: 1.2em
      text-align: center

      outline: none
      color: inherit
      text-decoration: none

    a.active
      color: activeTextColor
      background-color: activeNavColor