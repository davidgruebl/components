@require 'nib'

.loader-component:before, .loader-component:after, .loader-component
  width: 2.5em
  height: 2.5em
  border-radius: 50%
  animation-fill-mode: both
  animation: load7 1.8s infinite ease-in-out

.loader-component
  position: relative
  margin: 3em auto
  font-size: 6px
  text-indent: -9999em
  animation-delay: 0.16s

  &:before
    left: -3.5em

  &:after
    left: 3.5em
    animation-delay: 0.32s

  &:before, &:after
    absolute: top 0
    content: ''

@keyframes load7
  0%, 80%, 100%
    box-shadow: 0 2.5em 0 -1.3em #ccc
  40%
    box-shadow: 0 2.5em 0 0 #ccc
